generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AnimalType {
  DOG
  CAT
  BIRD
  REPTILE
  RABBIT
  OTHER
}

enum ListingStatus {
  LOST
  FOUND
  RESOLVED
}

model Listing {
  id          String        @id @default(cuid())
  title       String
  description String
  animalType  AnimalType
  status      ListingStatus @default(LOST)
  city        String?
  latitude    Float?
  longitude   Float?
  photos      String?       // singolo URL (per ora)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}